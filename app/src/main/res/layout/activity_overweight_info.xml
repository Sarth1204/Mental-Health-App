<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".obesity_info"
    android:background="@drawable/background_2">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Overweight refers to a medical condition characterized by having excess body weight or fat, which can increase the risk of developing various health problems."/>
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.164" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="OVERWEIGHT"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="How to control OverWeight"
        android:textAllCaps="true"
        android:textColor="#FF0000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="1)Eat a balanced, calorie-controlled diet \n2)Take up activities such as fast walking, jogging, swimming or tennis\n3)take up activities such as fast walking, jogging, swimming or tennis"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Execises for OverWeight"
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:textSize="25dp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.526" />

    <Button
        android:id="@+id/moreinfo_overweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For more info click here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="333dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >




            <Button
                android:id="@+id/legraises_bmi"
                android:layout_width="match_parent"
                android:height="80dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:text="Hanging Leg Raises"/>


            <Button
                android:id="@+id/dumbell_bmi"
                android:layout_width="match_parent"
                android:height="80dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:text="Dumble Side Bends"/>

            <Button
                android:id="@+id/superman_bmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="80dp"
                android:textColor="@color/black"
                android:background="@drawable/round_button"
                android:text="Superman"/>


            <Button
                android:id="@+id/crunches_bmii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="80dp"
                android:textColor="@color/black"
                android:background="@drawable/round_button"
                android:text="Crunches"/>


            <Button
                android:id="@+id/legvup_bmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="80dp"
                android:textColor="@color/black"
                android:background="@drawable/round_button"
                android:text="Bent Leg-V UP"/>


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>