<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bmr_calx"
    android:orientation="vertical"
    android:background="#023020">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Crunches"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=" Crunches, also known as abdominal crunches, are a core exercise designed to target your abdominal musclesâ€”specifically your rectus abdominis (the six-pack muscle) and your obliques."
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"/>



    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:paddingStart="10dp"
                android:src="@drawable/crunches_2" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/crunches_3" />


            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/crunches_1" />

        </LinearLayout>



    </HorizontalScrollView>

    <Button
        android:id="@+id/info_crunches"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:paddingTop="5dp"
        android:background="@drawable/round_button"
        android:drawableTop="@drawable/info_1"
        android:text="INFO"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/crunches_yt"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:paddingTop="5dp"
        android:background="@drawable/round_button"
        android:drawableTop="@drawable/video_1"
        android:text="Watch Video"

        android:textColor="@color/black" />


    <TextView
        android:id="@+id/display_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Date"
        android:textColor="@color/white"
        android:paddingLeft="170dp"
        />

    <Button
        android:id="@+id/add_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:text="PLus one Date"
        android:textColor="@color/black"/>

</LinearLayout>