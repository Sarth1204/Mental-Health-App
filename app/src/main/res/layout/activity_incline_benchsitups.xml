<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bmr_calx"
    android:orientation="vertical"
    android:background="#023020">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Incline Bench Sit-Ups"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=" Doing sit ups on an incline bench are more effective than regular sit ups, as there is a wider range of motion. This exercise strengthens your rectus abdominis, or your "
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"/>



    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:paddingStart="10dp"
                android:src="@drawable/incline_benchsitips" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"

                android:src="@drawable/inclined_benchsitups_2" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"

                android:src="@drawable/inclined_benchsitups_3" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/inclined_benchsitups_4" />



        </LinearLayout>



    </HorizontalScrollView>

    <Button
        android:id="@+id/info_inclined_benchsitups"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:paddingTop="5dp"
        android:background="@drawable/round_button"
        android:drawableTop="@drawable/info_1"
        android:text="INFO"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/inclined_benchsitups_yt"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:paddingTop="5dp"
        android:background="@drawable/round_button"
        android:drawableTop="@drawable/video_1"
        android:text="Watch Video"

        android:textColor="@color/black" />


</LinearLayout>