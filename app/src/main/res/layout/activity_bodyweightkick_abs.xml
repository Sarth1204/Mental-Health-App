<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bmr_calx"
    android:orientation="vertical"
    android:background="#023020">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="BodyWeight Scissor Kick"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=" The scissor kick exercise works your core muscles, glutes, quads and adductors. Engaging your core muscles is what allows you to “flutter” your legs up and down. The core muscles include the rectus abdominis, obliques, transverse abdominis, and the hip flexors."
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"/>



    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:paddingStart="10dp"
                android:src="@drawable/kick_1" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"

                android:src="@drawable/kick_2" />






            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/kick_3" />









        </LinearLayout>



    </HorizontalScrollView>

    <Button
        android:id="@+id/info_kick"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:paddingTop="5dp"
        android:background="@drawable/round_button"
        android:drawableTop="@drawable/info_1"
        android:text="INFO"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/kick_yt"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:paddingTop="5dp"
        android:background="@drawable/round_button"
        android:drawableTop="@drawable/video_1"
        android:text="Watch Video"

        android:textColor="@color/black" />


</LinearLayout>